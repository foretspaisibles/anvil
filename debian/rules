#!/usr/bin/make -f
MAKETOOL=bmake -r -I/usr/share/bsdowl MAKEOBJDIR=$$(pwd)/debian/obj/'$${.CURDIR}' DESTDIR=$$(pwd)/debian/anvil

%:
	dh $@

override_dh_auto_configure:
	autoconf
	dh_auto_configure

override_dh_auto_build:
	${MAKETOOL} obj build

override_dh_auto_install:
	${MAKETOOL} install
	dh_installman

override_dh_auto_clean:
	${MAKETOOL} distclean

override_dh_auto_test:
	: Do nada
